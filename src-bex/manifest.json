{
  "name": "ArkRecord",
  "description": "方舟抽卡记录统计插件",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icons/record-16.png",
    "48": "icons/record-48.png",
    "128": "icons/record-128.png"
  },
  "browser_action": {
    "default_popup": "www/index.html#/popup",
    "default_title": "quasar-browser-extension"
  },
  "background": {
    "scripts": [
      "www/bex-background.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "www/bex-content-script.js",
        "js/content-script.js"
      ],
      "css": [
        "css/content-css.css"
      ]
    }
  ],
  "permissions": [
    "*://*.hypergryph.com/*",
    "storage",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "web_accessible_resources": [
    "www/*",
    "js/*",
    "css/*",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
